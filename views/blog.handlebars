<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Created by {{user.username}} on {{format_date date_created}}</p>
  <div>
  {{#each comments as |comment| }}
<div class="row mb-4 comment">
  <div class="col-md-5">
    <p>Created by {{comment.user.username}} on {{format_date comment.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{comment.details}}
    </p>
  </div>
</div>
{{/each}}
  </div>
</div>
